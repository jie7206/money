<h2><%= t(:interest_index) %></h2>

<table>
  <tr class="thead">
    <td width="15"></td>
    <td><%= t(:property_name) %></td>
    <td><%= t(:interest_benjin) %></td>
    <td width="100"><%= t(:interest_start_date) %></td>
    <td width="100"><%= t(:interest_rate) %></td>
    <td width="100"><%= t(:interest_amount) %></td>
    <td width="100"><%= t(:interest_currency) %></td>
    <td width="100"><%= t(:exchange_to_twd) %></td>
    <td width="50"><%= t(:chart) %></td>
  </tr>
<% n = 1 %>
<% @interests.each do |interest| %>
  <tr <%= change_row_color %>>
    <td align="right"><%= n %></td>
    <td><%= link_edit_to(interest, interest.property.name) %></td>
    <td align="right"><%= to_n(interest.property.amount.abs) %></td>
    <td><%= interest.start_date.to_s(:db) %></td>
    <td align="right"><%= to_n(interest.rate, 2) %></td>
    <td align="right"><%= to_n(interest.amount, 0) %></td>
    <td align="right"><%= interest.currency_name %></td>
    <td align="right"><%= interest.amount_to(:twd) %></td>
    <td align="center"><%= chart_link(interest) %></td>
  </tr>
  <% n += 1 %>
<% end %>
